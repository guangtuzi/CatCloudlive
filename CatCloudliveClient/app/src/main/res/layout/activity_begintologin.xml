<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beginlogin_bg"
    tools:context="com.catlivevideo.living.catlivevideo.BeginToLoginActivity">


    <Button
        android:id="@+id/startTologin_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn_selector"
        android:text="@string/Tologin"
        android:textSize="25sp"
        android:padding="20dp"
        android:textColor="#ffffffff"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notLogin"
        android:textColor="@color/white"
        android:layout_above="@id/startTologin_btn"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"/>


</RelativeLayout>
